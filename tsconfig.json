{
  "compilerOptions": {
    "target": "ES2020",
   "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,

    "verbatimModuleSyntax": false,   // ðŸ‘ˆ turn this off (causes your error)
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
